.instantclick-bar 
	background color-light !important

@media screen and (max-width:540px)
	#wrapper
		padding: 20px 20px 20px 20px
	nav
		&.main-nav
			text-align: center
	a
		&.cta
			display: none

	#post-meta
		margin-top: 60px

	h2
		&.footline
			font-size: 13px

	h1
		font-size: 26px

	#post-list
		.dates
			display: none

	#post-list-footer
		margin-top: 20px
		padding-top: 40px

	.post
		margin: 40px 0
	h2
		font-size: 20px
		&.headline
			font-size: 13px
	h1
		font-size: 24px

	#archive-list,#post-list
		margin-top: 0

	#title
		font-size: 17px

@media screen and (max-width:768px)
	.archive .post-time
		margin: 5px 0
		width: auto
		font-size: 13px
		display: block
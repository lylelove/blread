.code 
	pre 
		overflow-x auto
		color #24292e
		-webkit-text-size-adjust none
#post-body 
	.highlight 
		margin 0
		padding 16px
		background #f6f8fa
		overflow auto
		color #ccc
		border-radius 3px
		margin-bottom 20px
		code 
			background #eee
			text-shadow 0 1px #fff
			padding 0 .3em
		pre 
			border none
			margin 0
			padding 0
			white-space pre
			font-family "SFMono-Regular",Consolas,"Liberation Mono",Menlo,Courier,monospace
			font-size 13px
			padding 4px
			border-radius 0
			background transparent
		table 
			margin 0
			width auto
			border 0 none
		tr 
			border 0 none
		td 
			border 0 none
			padding 0
			background transparent
			&.gutter 
				padding 0
		figcaption 
			font-size .75em
			color #999
			line-height 1em
			margin-bottom 1em
			a 
				float right
	pre 
		font-size .85em
		code 
			background 0 0
			text-shadow none
			padding 0
	.gist 
		margin 0 -20px
		border-style solid
		border-color #dedede
		border-width 1px 0
		background #2d2d2d
		padding 15px 20px 15px 0
		.gist-file 
			border none
			margin 0
			.gist-data 
				background 0 0
				border none
				.line-numbers 
					background 0 0
					border none
					padding 0 20px 0 0
				.line-data 
					padding 0!important
			.highlight 
				margin 0
				padding 0
				border none
			.gist-meta 
				background #2d2d2d
				color #999
				text-shadow 0 0
				padding 0
				margin-top 1em
				margin-left 20px
				a 
					color #7cc576
					font-weight 400
					&:hover 
						text-decoration underline
#post-body .gist .gist-file .gist-data .line-numbers,#post-body .highlight .gutter pre 
	color #7c90a5
